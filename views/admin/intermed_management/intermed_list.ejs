<% extend('../base_admin') %>

<div class="row justify-content-end">
  <div class="col-md-4">
    <a class="btn btn-outline-primary px-3 px-sm-4 mb-2"
      href="<%= routedebase %>/intermed_management/new_intermed">
      <i class="bx bx-layer-plus fs-xl me-sm-1"></i>
      <span class="d-none d-sm-inline">
        Ajouter un intermediaire
      </span>
    </a>
  </div>
</div>

<!-- Light table with hoverable rows -->
<div class="table-responsive">
    <table class="table table-hover">
      <thead>
        <tr>
          <th>#</th>
          <th>Nom</th>
          <th>Téléphone</th>
          <th>Email</th>
          <th>Statut</th>
          <th>Details</th>
        </tr>
        </thead>
        <tbody>
          <% for (i of intermeds) { %>
            <tr>
              <th scope="row">
                <%= intermeds.indexOf(i) + 1 %>
              </th>
              <td>
                <%= i.lastname %> <%= i.firstname %>
              </td>
              <td>
                <%= i.phone %>
              </td>
              <td>
                <%= i.email %>
              <td>
                <% if (i.status) { %>
                  <span class="badge bg-success">Actif</span>
                <% } else { %>
                  <span class="badge bg-danger">Inactif</span>
                <% } %>
              </td>
              <td>
                <button type="button" class="btn btn-sm btn-outline-secondary"
                data-bs-toggle="modal"
                data-bs-target="#details_<%= i.code %>">
                  <i class="bx bxs-detail fs-4"></i>
                </button>
                <%- include('../components/details_intermed') %>
              </td>
            </tr>
          <% } %> 
        </tbody>
    </table>
  </div>