<div class="modal fade" id="details_<%=f.code %>" tabindex="-" role="dialog">
    <div class="modal-dialog modal-dialog-centered modal-lg" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title">
            Folder No : <%= f.code %>
          </h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
          
          <!-- Light table with hoverable rows -->
          <div class="table-responsive">
            <table class="table table-hover">
              <tbody>
                <tr>
                  <th>Code</th>
                  <td><%= f.code %></td>
                </tr>
                <tr>
                  <th>Short-Code</th>
                  <td><%= f.short_code %></td>
                </tr>
                <tr>
                  <th>Projet</th>
                  <td><%= f.project.label || "Non défini" %></td>
                </tr>
                <tr>
                  <th>Propriétaire</th>
                  <td><%= f.owner.lastname %> <%= f.owner.firstname %></td>
                </tr>
                <tr>
                  <th>Créé le</th>
                  <td><%= moment(f.created_at).format('DD/MM/YYYY HH:mm:ss') %></td>
                </tr>
                <tr>
                  <th>Rejoint le</th>
                  <td><%= moment(f.joined_at).format('DD/MM/YYYY HH:mm:ss') %></td>
                </tr>
              </tbody>
            </table>
          </div>
        </div>
  
        <div class="modal-footer">
          <a class="btn btn-primary btn-sm"
            href="">
            <i class="bx bx-layer-plus fs-xl me-sm-1"></i>
            Y Ajouter un document
          </a>
          <a class="btn btn-primary btn-sm"
            href="<%= routedebase %>/folder_management/view_folder/<%= f.id %>">
            Voir plus
          </a>
          <button type="button" class="btn btn-secondary btn-sm" data-bs-dismiss="modal">
            Fermer
          </button>
        </div>
      </div>
    </div>
  </div>