<div class="modal fade" id="details_<%=i.code %>" tabindex="-" role="dialog">
  <div class="modal-dialog modal-dialog-centered modal-lg" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">
          Intervenant No : <%= i.code %>
        </h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        
        <!-- Light table with hoverable rows -->
        <div class="table-responsive">
          <table class="table table-hover">
            <tbody>
              <tr>
                <th>Code</th>
                <td><%= i.code %></td>
              </tr>
              <tr>
                <th>Profil</th>
                <td><%= i.aps_profile.label || "Non défini" %></td>
              </tr>
              <tr>
                <th>Projet affecté</th>
                <td><%= i.aps_project.label || "Non défini" %></td>
              </tr>
              <tr>
                <th>Intermediaire</th>
                <td><%= i.lastname %> <%= i.firstname %></td>
              </tr>
              <tr>
                <th>Créé le</th>
                <td><%= moment(i.created_at).format('DD/MM/YYYY HH:mm:ss') %></td>
              </tr>
            </tbody>
          </table>
        </div>
      </div>

      <div class="modal-footer">
        <button type="button" class="btn btn-secondary btn-sm" data-bs-dismiss="modal">
          Fermer
        </button>
      </div>
    </div>
  </div>
</div>